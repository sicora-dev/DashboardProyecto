<Window x:Class="DashboardTienda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashboardTienda"
        mc:Ignorable="d"
        Title="Dashboard"
        Height="720"
        Width="1280"
        Background="{DynamicResource BackgroundColor}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border x:Name="NavBar"
        Style="{DynamicResource NavBar}"
        VerticalAlignment="Stretch"
        HorizontalAlignment="Left"
        Grid.RowSpan="3"
        Height="Auto">
            <StackPanel>
                <TextBlock Text="{Binding User.role}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
                <TextBlock Text="DashBoard" FontSize="30"></TextBlock>
                <TextBlock Text="Home" FontSize="20"></TextBlock>
                <TextBlock Text="Products" FontSize="20"></TextBlock>
                <TextBlock Text="Orders" FontSize="20"></TextBlock>
                <TextBlock Text="Customers" FontSize="20"></TextBlock>
                <TextBlock Text="Reports" FontSize="20"></TextBlock>
            </StackPanel>
        </Border>
        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="10"
                    Grid.Column="2"
                    Grid.Row="2">
            <ToggleButton x:Name="ThemeToggle"
                          Content="Toggle Theme"
                          Background="{DynamicResource SecondaryColor}"
                          Foreground="{DynamicResource TextColor}"
                          Checked="ThemeToggle_Checked"
                          Unchecked="ThemeToggle_Unchecked" />
        </StackPanel>
    </Grid>
</Window>
