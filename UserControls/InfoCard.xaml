<UserControl x:Class="DashboardTienda.UserControls.InfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="infoCard">
    <Border Margin="10 10" Style="{DynamicResource whiteBorder}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ElementName=infoCard, Path=Image}"
                       Width="40"
                       Height="40"
                       Margin="0 0 10 0" />
                <TextBlock Text="{Binding ElementName=infoCard, Path=Title}"
                           Style="{DynamicResource titleText}"></TextBlock>
            </StackPanel>
            <TextBlock Text="{Binding ElementName=infoCard, Path=SubTitle}"
                       Style="{DynamicResource secondaryText}"></TextBlock>
            <Slider Style="{DynamicResource SliderStyle1}" x:Name="slider"
                    Margin="0 5 0 0"
                    IsSelectionRangeEnabled="True"
                    Value="{Binding ElementName=infoCard, Path=Amount}"
                    SelectionEnd="{Binding ElementName=slider, Path=Value}"></Slider>
        </StackPanel>

    </Border>
</UserControl>
